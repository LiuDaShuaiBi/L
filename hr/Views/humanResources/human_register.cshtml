
@{
    Layout = null;
}
@using hrModel;
@model IEnumerable<hrModel.config_public_char>
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css">
    <link rel="stylesheet"
          href="../../css/cwcalendar.css" type="text/css">
    @*<script type="text/javascript"
                src="../../javascript/jquery-1.7.2.js">
        </script>*@
    <script src="~/javascript/jquery-1.7.2.js"></script>
    <script type="text/javascript"
            src="../../javascript/jquery.messager.js">
    </script>
    <script src="~/javascript/human_check.js"></script>
    <script type="text/javascript"
            src="~/javascript/select.js">
    </script>

    <script src="../../javascript/time.js">
    </script>
    <script src="~/javascript/xlk.js"></script>
    @*<script type="text/javascript"
                src="../../javascript/human_input_check.js">
        </script>*@
    <script type="text/javascript">
        $(function () {
            $("#salary_standard_id").change(function () {
                $("#salary_standard_name").val($("#salary_standard_id").find("option:selected").text());
                $("#salary_sum").val($("#salary_standard_id").find("option:selected").text());
            });
        })
    </script>
</head>

<body>
    <table width="100%">
        <form method="post" action="register_choose_picture">
            <input type="hidden" name="human_id" value="@ViewData["id"]" />
            <input type="hidden" name="check_status" value="2" />
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--人力资源档案管理--人力资源档案登记 </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="submit" value="提交" class="BUTTON_STYLE1" />
                    <input type="reset" value="清除" class="BUTTON_STYLE1" />
                </td>
            </tr>
    </table>
    <table width="100%" border="1" cellpadding=3 cellspacing=1
           bordercolorlight=#848284 bordercolordark=#eeeeee
           class="TABLE_STYLE1">
        <tr>
            <td class="TD_STYLE1" width="11%">
                I级机构
            </td>
            <td width="14%" class="TD_STYLE2">
                <select name="first_kind_id" class="SELECT_STYLE1" id="firstKindId">
                    <option value="0">请选择</option>
                    @foreach (var item in ViewData["yi"] as List<config_file_first_kind>)
                    {
                        <option value="@item.first_kind_id">@item.first_kind_name</option>
                    }
                </select>
                <input type="hidden" name="first_kind_name" id="firstKindName" />
            </td>
            <td width="11%" class="TD_STYLE1">
                II级机构
            </td>
            <td width="14%" class="TD_STYLE2">
                <select name="second_kind_id" class="SELECT_STYLE1" id="secondKindId">
                    <option value="0">请选择</option>
                   
                </select>
                <input type="hidden" name="second_kind_name" id="secondKindName" />
            </td>
            <td width="11%" class="TD_STYLE1">
                III级机构
            </td>
            <td class="TD_STYLE2" colspan="2">
                <select name="third_kind_id" class="SELECT_STYLE1" id="thirdKindId">
                    <option value="0">请选择</option>
                   
                </select>
                <input type="hidden" name="third_kind_name" id="thirdKindName" />
            </td>
            <td rowspan="5" style="text-align: center;"></td>
        </tr>
        <tr>
            <td class="TD_STYLE1">
                职位分类
            </td>
            <td class="TD_STYLE2">
                <select name="human_major_kind_id" class="SELECT_STYLE1" id="majorKindId">
                    @foreach (var item in ViewData["zwfl"] as List<config_major_kind>)
                    {
                        <option value="@item.major_kind_id">@item.major_kind_name</option>
                    }
                </select>
                <input type="hidden" name="human_major_kind_name" id="majorKindName" />
            </td>
            <td class="TD_STYLE1">
                职位名称
            </td>
            <td class="TD_STYLE2">
                <select name="human_major_id" class="SELECT_STYLE1" id="majorId">
                    <option value="0">请选择</option>
                </select>
                <input type="hidden" name="hunma_major_name" id="majorName" />
            </td>
            
  
                <input name="human_pro_designation" class="SELECT_STYLE1" id="pro" type="hidden" value="员工"> 

        </tr>
        <tr>
            <td class="TD_STYLE1">
                姓名
            </td>
            <td class="TD_STYLE2">
                <input type="text" id="humanName" name="human_name"
                       class="INPUT_STYLE2" />
            </td>
            <td class="TD_STYLE1">
                性别
            </td>
            <td class="TD_STYLE2">
                <select name="human_sex" class="SELECT_STYLE1">
                    <option value="男" selected="selected">
                        男
                    </option>
                    <option value="女">
                        女
                    </option>
                </select>
            </td>
            <td class="TD_STYLE1">
                EMAIL
            </td>
            <td colspan="2" class="TD_STYLE2">
                <input type="text" name="human_email" id="humanEmail"
                       class="INPUT_STYLE2">
            </td>
        </tr>
        <tr>
            <td class="TD_STYLE1">
                电话
            </td>
            <td class="TD_STYLE2">
                <input type="text" name="human_telephone" id="humanTelephone"
                       class="INPUT_STYLE2">
            </td>
            <td class="TD_STYLE1">
                QQ
            </td>
            <td class="TD_STYLE2">
                <input type="text" name="human_qq" id="humanQq"
                       class="INPUT_STYLE2">
            </td>
            <td class="TD_STYLE1">
                手机
            </td>
            <td colspan="2" class="TD_STYLE2">
                <input type="text" name="human_mobilephone " id="humanMobilephone"
                       class="INPUT_STYLE2">
            </td>
        </tr>
        <tr>
            <td class="TD_STYLE1">
                住址
            </td>
            <td colspan="3" class="TD_STYLE2">
                <input type="text" name="human_address"
                       class="INPUT_STYLE2">
            </td>
            <td class="TD_STYLE1">
                邮编
            </td>
            <td colspan="2" class="TD_STYLE2">
                <input type="text" name="human_postcode"
                       class="INPUT_STYLE2">
            </td>
        </tr>
        <tr>
            <td class="TD_STYLE1">
                国籍
            </td>
            <td class="TD_STYLE2">
                <select name="human_nationality" class="SELECT_STYLE1">
                    @foreach (var item in Model)
                    {
                        if (item.attribute_kind == "国籍")
                        {
                            <option value="@item.attribute_name">@item.attribute_name</option>
                        }
                    }
                </select>
            </td>
            <td class="TD_STYLE1">
                出生地
            </td>
            <td class="TD_STYLE2">
                <input type="text" name="human_birthplace"
                       class="INPUT_STYLE2">
            </td>
            <td class="TD_STYLE1">
                生日
            </td>
            <td width="13%" class="TD_STYLE2">
                <input type="text" name="human_birthday"
                       class="INPUT_STYLE2" id="birthday">
            </td>
            <td width="11%" class="TD_STYLE1">
                民族
            </td>
            <td class="TD_STYLE2" width="14%">
                <select name="human_race" class="SELECT_STYLE1">
                    @foreach (var item in Model)
                    {
                        if (item.attribute_kind == "民族")
                        {
                            <option value="@item.attribute_name">@item.attribute_name</option>
                        }
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td class="TD_STYLE1">
                宗教信仰
            </td>
            <td class="TD_STYLE2">
                <select name="human_religion" class="SELECT_STYLE1">
                    @foreach (var item in Model)
                    {
                        if (item.attribute_kind == "宗教信仰")
                        {
                            <option value="@item.attribute_name">@item.attribute_name</option>
                        }
                    }
                </select>
            </td>
            <td class="TD_STYLE1">
                政治面貌
            </td>
            <td class="TD_STYLE2">
                <select name="human_party" class="SELECT_STYLE1">
                    @foreach (var item in Model)
                    {
                        if (item.attribute_kind == "政治面貌")
                        {
                            <option value="@item.attribute_name">@item.attribute_name</option>
                        }
                    }
                </select>
            </td>
            <td class="TD_STYLE1">
                身份证号码
            </td>
            <td class="TD_STYLE2">
                <input type="text" name="human_id_card" id="humanIdCard"
                       class="INPUT_STYLE2">
            </td>
            <td class="TD_STYLE1">
                社会保障号码
            </td>
            <td class="TD_STYLE2">
                <input type="text" name="human_society_security_id"
                       class="INPUT_STYLE2">
            </td>
        </tr>
        <tr>
            <td class="TD_STYLE1">
                年龄
            </td>
            <td class="TD_STYLE2">
                <input type="text" name="human_age" id="humanAge"
                       class="INPUT_STYLE2">
            </td>
            <td class="TD_STYLE1">
                学历
            </td>
            <td class="TD_STYLE2">
                <select name="human_educated_degree" class="SELECT_STYLE1">
                    @foreach (var item in Model)
                    {
                        if (item.attribute_kind == "学历")
                        {
                            <option value="@item.attribute_name">@item.attribute_name</option>
                        }
                    }
                </select>
            </td>
            <td class="TD_STYLE1">
                教育年限
            </td>
            <td class="TD_STYLE2">
                <select name="human_educated_years" class="SELECT_STYLE1">
                    @foreach (var item in Model)
                    {
                        if (item.attribute_kind == "教育年限")
                        {
                            <option value="@item.attribute_name">@item.attribute_name</option>
                        }
                    }
                </select>
            </td>
            <td class="TD_STYLE1">
                学历专业
            </td>
            <td class="TD_STYLE2">
                <select name="human_educated_major" class="SELECT_STYLE1">
                    @foreach (var item in Model)
                    {
                        if (item.attribute_kind == "专业")
                        {
                            <option value="@item.attribute_name">@item.attribute_name</option>
                        }
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td class="TD_STYLE1">
                薪酬标准
            </td>
            <td class="TD_STYLE2">
                <select name="salary_standard_id" class="SELECT_STYLE1" id="salary_standard_id">
                    @foreach (var item in ViewData["zc"] as List<salary_standard>)
                    {
                        <option value="@item.standard_id">@item.salary_sum</option>
                    }
                </select>
                <input type="hidden" name="salary_standard_name" id="salary_standard_name" />
                <input type="hidden" name="salary_sum" id="salary_sum" />
            </td>
            <td class="TD_STYLE1">
                开户行
            </td>
            <td class="TD_STYLE2">
                <input type="text" name="human_bank"
                       class="INPUT_STYLE2">
            </td>
            <td class="TD_STYLE1">
                帐号
            </td>
            <td class="TD_STYLE2">
                <input type="text" name="human_account"
                       class="INPUT_STYLE2">
            </td>
            <td class="TD_STYLE1">
                登记人
            </td>
            <td class="TD_STYLE2">
                <input type="text" name="register" value="admin" class="INPUT_STYLE2">
            </td>
        </tr>
        <tr>
            <td class="TD_STYLE1">
                建档时间
            </td>
            <td class="TD_STYLE2">
                <input type="text" name="regist_time"
                       id="create_time" readonly="readonly"
                       class="INPUT_STYLE2">
            </td>
            <td class="TD_STYLE1">
                特长
            </td>
            <td class="TD_STYLE2">
                <select name="human_speciality" class="SELECT_STYLE1">
                    @foreach (var item in Model)
                    {
                        if (item.attribute_kind == "特长")
                        {
                            <option value="@item.attribute_name">@item.attribute_name</option>
                        }
                    }
                </select>
            </td>
            <td class="TD_STYLE1">
                爱好
            </td>
            <td class="TD_STYLE2">
                <select name="human_hobby" class="SELECT_STYLE1">
                    @foreach (var item in Model)
                    {
                        if (item.attribute_kind == "爱好")
                        {
                            <option value="@item.attribute_name">@item.attribute_name</option>
                        }
                    }
                </select>
            </td>
            <td class="TD_STYLE1">
                &nbsp;
            </td>
            <td class="TD_STYLE2">
                &nbsp;
            </td>
        </tr>
        <tr>
            <td class="TD_STYLE1">
                个人履历
            </td>
            <td colspan="7" class="TD_STYLE2">
                <textarea name="human_histroy_records" rows="4"
                          class="TEXTAREA_STYLE1" style="resize:none;width:99%;"></textarea>
            </td>
        </tr>
        <tr>
            <td class="TD_STYLE1">
                家庭关系信息
            </td>
            <td colspan="7" class="TD_STYLE2">
                <textarea name="human_family_membership" rows="4"
                          class="TEXTAREA_STYLE1" style="resize:none;width:99%;"></textarea>
            </td>
        </tr>
        <tr>
            <td class="TD_STYLE1">
                备注
            </td>
            <td colspan="7" class="TD_STYLE2">
                <textarea name="remark" rows="4" class="TEXTAREA_STYLE1" style="resize:none;width:99%;"></textarea>
            </td>
        </tr>
    </table>
    </form>
</body>
</html>