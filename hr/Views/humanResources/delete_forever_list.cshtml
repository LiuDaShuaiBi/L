
@{
    Layout = null;
}

<!DOCTYPE html>
@model IEnumerable<hrModel.human_file>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css">
    <script src="~/javascript/jquery-1.7.2.js"></script>
    <script type="text/javascript">
        function doDelete(id,p) {
            if (confirm("确定删除此档案吗？")) {
                $.ajax({
                    url: "delete",
                    data: "id=" + id,
                    success: function (data) {
                        $(p).parent().parent().remove();
                        alert("删除成功");
                    }
                });
            }
        }
    </script>
</head>

<body>
    <form action="" method="post">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--人力资源档案管理--人力资源档案永久删除 </font>
                </td>
            </tr>
            <tr>
                <td>
                    符合条件的人力资源档案总数：1例
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=5 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr class="TR_STYLE1">
                <td width="14%" height="13" class="TD_STYLE1">
                    档案编号
                </td>
                <td width="11%" class="TD_STYLE1">
                    姓名
                </td>
                <td width="6%" class="TD_STYLE1">
                    性别
                </td>
                <td width="13%" class="TD_STYLE1">
                    I级机构
                </td>
                <td width="12%" class="TD_STYLE1">
                    II级机构
                </td>
                <td width="13%" class="TD_STYLE1">
                    III级机构
                </td>
                <td width="11%" class="TD_STYLE1">
                    职位分类
                </td>
                <td width="13%" class="TD_STYLE1">
                    职位名称
                </td>
                <td width="7%" class="TD_STYLE1">
                    永久删除
                </td>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="TR_STYLE2">
                    <td width="14%" height="13" class="TD_STYLE2">
                        @item.human_id
                    </td>
                    <td width="11%" class="TD_STYLE2">
                        @item.human_name
                    </td>
                    <td width="6%" class="TD_STYLE2">
                        @item.human_sex
                    </td>
                    <td width="13%" class="TD_STYLE2">
                        @item.first_kind_name
                    </td>
                    <td width="12%" class="TD_STYLE2">
                        @item.second_kind_name
                    </td>
                    <td width="13%" class="TD_STYLE2">
                        @item.third_kind_name
                    </td>
                    <td width="11%" class="TD_STYLE2">
                        @item.human_major_kind_name
                    </td>
                    <td width="13%" class="TD_STYLE2">
                        @item.hunma_major_name
                    </td>
                    <td width="7%" class="TD_STYLE2">
                        <img src="../../images/bt_del.gif" title="删除" style="cursor:pointer;" onclick="doDelete(@item.huf_id,this)" />
                    </td>
                </tr>
            }
        </table>
        @*<p style="text-align: center;">

                <a href="delete_forever_list.html" style="color:black;">首页</a>

                <font color="red">1</font>

                <a href="delete_forever_list.html" style="color:black;">尾页</a>

            </p>*@
    </form>
</body>
</html>
