
@{
    Layout = null;
}
@model IEnumerable<hrModel.config_public_char>
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link href="~/css/main.css" rel="stylesheet" />
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>

    <script type="text/javascript" src="../../javascript/jquery-1.7.2.js"></script>

    <script type="text/javascript">
			function deletePublicChar(id){
				$.ajax({
				        url: "/client/public_char_delete",
						data:"Id="+id,
						dataType:"text",
						success:function (){
							alert("删除成功！");
							location.reload();
						},
						type:"post"
					});
			}
    </script>
</head>
<body>
    <form method="post" action="../customiz/customizAction!findPublicChar">
        <table width="100%">
            <tr>
                <td>
                    <font>
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--公共属性设置
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="button" value="添加" class="BUTTON_STYLE1"
                           onclick="window.location.href='public_char_add';">
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="49%" class="TD_STYLE1">
                    属性种类
                </td>
                <td width="44%" class="TD_STYLE1">
                    属性名称
                </td>
                <td width="7%" class="TD_STYLE1" align="center">
                    删除
                </td>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="TD_STYLE2">
                        @item.attribute_kind
                    </td>
                    <td class="TD_STYLE2">
                        @item.attribute_name
                    </td>
                    <td class="TD_STYLE2" align="center">
                        <a onclick="deletePublicChar(@item.pbc_id)">删除</a>
                    </td>
                </tr>
            }
        </table>
        <p>

    </form>
</body>
</html>